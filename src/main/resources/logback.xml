<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%X{JMSCorrelationID}] [%-5level] - %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="DB" class="geocat.dblogging.logback.CustomDBAppender">
        <connectionSource class="ch.qos.logback.core.db.DriverManagerConnectionSource">
            <driverClass>org.postgresql.Driver</driverClass>
            <url>jdbc:postgresql://localhost:5432/harvest</url>
            <user>postgres</user>
            <password>mysecretpassword</password>
        </connectionSource>
    </appender>
    <!--    <logger name="org.hibernate" level="ERROR" />-->
    <!--    <logger name="com.zaxxer" level="ERROR" />-->
    <!--    <logger name="org.springframework" level="INFO" />-->
    <!--    <logger name="_org.springframework" level="INFO" />-->
    <!--    <logger name="org.eclipse" level="ERROR" />-->

    <!--    <logger name="org.apache" level="ERROR" />-->

    <logger name="geocat" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="DB"/>

    </root>
</configuration>